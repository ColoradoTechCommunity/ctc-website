---
type Props = {
	src: string
}

const { src } = Astro.props
---

<div>
	<iframe src={src} webkitallowfullscreen mozallowfullscreen allowfullscreen
	></iframe>
</div>

<style>
	div {
		position: relative;
		padding-bottom: 65%;
		height: 0;
	}

	iframe {
		position: absolute;
		border: 0;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
</style>
